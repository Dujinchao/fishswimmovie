/* pages/moviedetail/moviedetail.wxss */
.detail {
  padding: 20rpx;
  box-sizing: border-box;
}
.top {
  display: flex;
}
.top .image {
  width: 200rpx;
}
.top .image image {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 20rpx;
}
.top .info {
  margin-left: 20rpx;
}
.top .info .title {
  font-size: 40rpx;
  font-weight: bold;
}
.top .info .etitle {
  font-size: 30rpx;
}
.top .info .text {
  margin-top: 10rpx;
  font-size: 30rpx;
}
.desc {
  margin-top: 40rpx;
}
.desc .title {
  display: flex;
  justify-content: space-between;
}
.desc .title .text:first-child {
  font-size: 36rpx;
  font-weight: bold;
}
.desc .text {
  margin-top: 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.photos {
  margin-top: 40rpx;
  white-space: nowrap;
}
.photos .title {
  font-size: 36rpx;
  font-weight: bold;
}
.photos image {
  display: inline-block;
  margin-top: 20rpx;
  margin-right: 20rpx;
  width: 400rpx;
  height: 300rpx;
  border-radius: 20rpx;
  object-position: center;
}
