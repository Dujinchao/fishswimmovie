/* pages/index/components/movie-list/movie-list.wxss */
.movie-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #F1F1F1;
  position: relative;
}
.movie-item .image {
  width: 22%;
}
.movie-item .image image {
  width: 100%;
}
.movie-item .info {
  width: 58%;
  padding-left: 20rpx;
}
.movie-item .info .name {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  display: -webkit-box !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.movie-item .info .text {
  margin-top: 16rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie-item .handle {
  width: 20%;
  display: flex;
  align-items: center;
}
.movie-item .handle .buybtn {
  padding: 0;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: 300;
  border-radius: 20upx 20upx;
  color: #fff;
}
